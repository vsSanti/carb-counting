{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Auth Offline",
      "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
      "args": ["offline", "start", "-c", "infra/cc-authorizer-api-stack.yml", "--httpPort", "4000", "--noTimeout"],
      "protocol": "inspector",
      "sourceMaps": true,
      "runtimeArgs": ["--lazy"],
      "outFiles": ["${workspaceFolder}/src/**/*.ts"],
      "runtimeExecutable": "node",
      "restart": true,
      "windows": {
        "program": "${workspaceRoot}\\node_modules\\serverless\\bin\\serverless"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Meal Offline",
      "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
      "args": ["offline", "start", "-c", "infra/cc-meal-api-stack.yml", "--httpPort", "4000", "--noTimeout", "--noAuth"],
      "protocol": "inspector",
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/env/.meal.env",
      "runtimeArgs": ["--lazy"],
      "outFiles": ["${workspaceFolder}/src/**/*.ts"],
      "runtimeExecutable": "node",
      "restart": true,
      "windows": {
        "program": "${workspaceRoot}\\node_modules\\serverless\\bin\\serverless"
      }
    }
  ]
}