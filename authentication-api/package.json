  "license": "MIT",
  "version": "0.0.0",
  "description": "Carb counting API using Serverless",
  "main": "serverless.ts",
  "scripts": {
    "lint:fix": "eslint 'src/**' --fix",
    "prepare": "cd .. && husky install authentication-api/.husky",
    "offline": "sls offline start --httpPort 4000 --noTimeout",
    "pretest": "jest --clearCache",
    "test": "jest --passWithNoTests --no-cache --silent --noStackTrace --runInBand",
    "test:coverage": "npm test -- --coverage",
    "test:staged": "npm test -- --findRelatedTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.js"
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@serverless/typescript": "^2.23.0",
    "@types/aws-lambda": "^8.10.71",
    "@types/bcrypt": "^5.0.0",
    "@types/faker": "^5.5.7",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "pg-mem": "^1.9.15",
    "prettier": "^2.3.2",
    "serverless": "^2.23.0",
    "serverless-offline": "^8.0.0",
    "serverless-webpack": "^5.3.5",
    "ts-jest": "^27.0.4",
    "ts-loader": "^8.0.15",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "webpack": "^5.20.2",
    "webpack-node-externals": "^2.5.2"
  }
}
